block vars
	include ../include/_vars.pug
	- var key = "about01"
	- var page = pages[key]
	- var root_path = '../';
	- var assets_path = '../assets/';


block contents

	main.main

		.about-hero
			.about-hero__content
				h2.about-hero__title
